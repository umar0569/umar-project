
<% layout("/layouts/boilerPlate") %>
<style>
    .filters{
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start; /* Align to the left */
        
        margin: 0 auto;
        width: calc(100% - 20px);
        max-width: 100%;
    }
    .filter{
        margin-right:2.2rem;
        margin-top: 0.9rem;
        margin-bottom:0.5rem;
        text-align: center;
        opacity:0.75;
    }
    .filter:hover{
        opacity:1;
        cursor:pointer;
    }
    .filter p{
        font-size:0.8rem;
    }
    .tax-info{
        display:none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height:3rem;
        padding:1rem;
        margin-left: 1rem;
        display:flex;
        align-items:center;
    }

</style>
<body>

    <div class="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Top cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-van-shuttle"></i></div>
            <p>Camper vans</p>
        </div>
         <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Beach</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Lake</p>
        </div>
        
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>

    </div>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt3" >
        <% for(list of lists){ %>
            <a href="/listing/<%= list._id%>" class="listing-link">
                <div class="card col " style="width: 20rem;" >
                    <!-- image -->
                    <img src="<%= list.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
                    <!-- image overlay -->
                    <div class="card-img-overlay"></div>
                      <!-- card body -->
                    <div class="card-body">
                        <p class="card-text">
                        <b><%= list.title %></b>
                        <br>
                        &#8377;<%= list.price.toLocaleString("en-IN") %>
                        <i class="tax-info">&nbsp; &nbsp;+18%GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>

    <script>
        document.getElementById("flexSwitchCheckDefault").addEventListener("click",()=>{
            let InfoTaxes=document.getElementsByClassName("tax-info");
            console.log(InfoTaxes);
            for(Info of InfoTaxes){
                if(Info.style.display!="inline"){
                    Info.style.display="inline";
                }
                else{
                    Info.style.display="none";
                }
            }
           
        })
    </script>
</body>
